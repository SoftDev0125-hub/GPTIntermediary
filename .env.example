# Google OAuth Configuration (for user authentication via ChatGPT)
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here

# Server Configuration
HOST=0.0.0.0
PORT=8000
DEBUG=True

# Email Finder (Bing + People API) - find person's email by name when not in contacts
# Required for: "Tell me xxx's email", "Find email of xxx from company Y", "Send to xxx's email", etc.
# Accepted keys: BING_SEARCH_API_KEY or BING_API_KEY (Azure); PEOPLE_API_KEY (e.g. Hunter.io)
# BING_SEARCH_API_KEY=your_azure_bing_subscription_key
# BING_API_KEY=your_key
# PEOPLE_API_KEY=your_hunter_io_or_people_api_key

# Application Settings
MAX_UNREAD_EMAILS=50
LOG_LEVEL=INFO
